{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
